#!/bin/bash
#SBATCH --partition=clara-job
#SBATCH --mem=70000
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --time=24:00:00

module load Python
if [[ ! -d venv ]]; then
    python3 -m venv venv
    venv/bin/python3 venv/bin/pip3 install -r requirements.txt
fi

CLI_ARGS=$(echo "$ARGS" | base64 -d)
venv/bin/python3 bin/run_canids $CLI_ARGS
