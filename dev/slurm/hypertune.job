#!/bin/bash
#SBATCH --partition=galaxy-job
#SBATCH --mem=100000
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --time=2-00:00:00

module load Python
if [[ ! -d venv3.7 ]]; then
        python3.7 -m venv venv3.7
fi
venv3.7/bin/python3 venv3.7/bin/pip3 install -r requirements.txt

CLI_ARGS=$(echo "$HYPERTUNE_ARGS" | base64 -d)
venv3.7/bin/python3 bin/run_canids hypertune $CLI_ARGS
